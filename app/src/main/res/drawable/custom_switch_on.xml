<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/switch_red"
        android:top="@dimen/switch_padding"
        android:bottom="@dimen/switch_padding"
        android:start="@dimen/switch_padding"
        android:end="@dimen/switch_padding">
        <shape>
            <solid android:color="@color/std_red"></solid>
            <corners android:radius="@dimen/switch_radius"></corners>
            <size android:height="@dimen/switch_size"></size>
        </shape>
    </item>

    <item
        android:id="@+id/switch_green"
        android:top="@dimen/switch_padding"
        android:bottom="@dimen/switch_padding"
        android:start="@dimen/switch_padding"
        android:end="@dimen/switch_padding">
        <shape>
            <solid android:color="@color/std_green"></solid>
            <corners android:radius="@dimen/switch_radius"></corners>
            <size android:height="@dimen/switch_size"></size>
        </shape>
    </item>

    <item
        android:id="@+id/switch_blue"
        android:top="@dimen/switch_padding"
        android:bottom="@dimen/switch_padding"
        android:start="@dimen/switch_padding"
        android:end="@dimen/switch_padding">
        <shape>
            <solid android:color="@color/std_blue"></solid>
            <corners android:radius="@dimen/switch_radius"></corners>
            <size android:height="@dimen/switch_size"></size>
        </shape>
    </item>
</layer-list>