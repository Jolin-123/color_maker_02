<!-- res/drawable/cus_seekbar_red.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#CCCCCC" /> <!-- Set your background color here -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <solid android:color="#FF0000" /> <!-- Set your progress color here -->
            </shape>
        </clip>
    </item>
</layer-list>
